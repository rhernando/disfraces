<h1>Lista de disfraces</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @disfrazs.each do |disfraz| %>
  <tr>
    <td><%= disfraz.nombre %></td>
    <td><%= link_to 'Show', disfraz  if current_user.admin? %></td>
    <td><%= link_to 'Edit', edit_disfraz_path(disfraz)  if current_user.admin? %></td>
